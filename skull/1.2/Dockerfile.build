# Based on skull:1.2 image
FROM finaldie/skull:1.2

# Install all the dependencies
RUN set -ex \
    && apt-get update && apt-get install -y --no-install-recommends \
        git \
        autoconf \
        automake \
        libtool \
        make \
        gcc \
        g++ \
        libc6-dev \
        python3-dev \
        python3-pip \
        python3-setuptools \
        python3-wheel \
        # Above should be exactly the same as Dockerfile
        psmisc \
        netcat-openbsd \
        net-tools \
        libc-ares-dev \
        vim \
        gdb \
        valgrind \
        expect \
        tree \
    && rm -rf /var/lib/apt/lists/*

# Build and Install Skull
RUN set -ex \
    # Clone branch 1.2
    && git clone --single-branch --branch 1.2 --depth 1 --recursive git://github.com/finaldie/skull.git /build \
    # Verification
    && ldd -r `which skull-engine` \
    && pip3 list \
    && make -C /build check case=basic,py_basic verbose=true \
    # Cleanup
    && rm -rf /build

# Setup environment variables
ENV SKULL_VERSION 1.2
ENV SKULL_GITSHA1 53dda77e04af191f7fe8c2a6c18e23523e913d19

VOLUME /workspace
WORKDIR /workspace

EXPOSE 7758 7759

# Entrypoint
CMD ["/bin/bash"]

